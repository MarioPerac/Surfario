<Application x:Class="Surfario.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Surfario"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="TabTemplate">
                <Grid Width="200" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="18"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TabTextBox" Text="{Binding}" Grid.Column="0" FontSize="12" VerticalAlignment="Center" Margin="20 0 0 0"/>
                <Button BorderThickness="0" Grid.Column="1" HorizontalAlignment="Right" Background="Transparent" VerticalAlignment="Center" Width="20" Height="20" >
                    <Image Source="images/close.png"/>
                </Button>
            </Grid>
        </DataTemplate>
    </Application.Resources>
</Application>
